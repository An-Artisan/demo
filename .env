# 应用程序配置
APP_NAME=FatFreeApp
APP_ENV=development  # 环境：production, development, testing
APP_DEBUG=true
APP_LOCALE=zh_CN
APP_TIMEZONE=Asia/Shanghai

# 数据库连接配置
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=test
DB_USERNAME=root
DB_PASSWORD=new_password

# 缓存设置
CACHE_DRIVER=file  # 可选: file, redis, memcached
CACHE_PATH=storage/cache

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# 邮件发送配置
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@example.com
MAIL_PASSWORD=yourpassword
MAIL_ENCRYPTION=tls

# JWT 身份验证
JWT_SECRET=your-jwt-secret-key

# 日志级别
LOG_LEVEL=debug
LOG_PATH=storage/logs

# 自定义 API 相关
API_RATE_LIMIT=100  # API 限流（每分钟最大请求数）
API_SECRET_KEY=your-api-secret-key
